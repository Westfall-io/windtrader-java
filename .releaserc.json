{
  "branches": ["main"],
  "plugins": [
    [
      "semantic-release-gitmoji",
      {
        "releaseRules": {
          "major": [":boom:"],
          "minor": [":sparkles:"],
          "patch": [":bug:", ":ambulance:", ":lock:", ":zap:"],
          "skip": [":memo:", ":white_check_mark:", ":construction:", ":recycle:"]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "mvn -q -DskipTests clean package && JAR=$(ls -1 target/*.jar | grep -v '^target/original-' | head -n 1) && cp \"$JAR\" \"target/windtrader-java-${nextRelease.version}.jar\""
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "target/windtrader-java-*.jar",
            "label": "windtrader-java shaded jar"
          }
        ]
      }
    ]
  ]
}
