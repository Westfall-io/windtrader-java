{
  "branches": ["main"],
  "plugins": [
    [
      "semantic-release-gitmoji",
      {
        "releaseRules": {
          "major": [":boom:"],
          "minor": [":sparkles:"],
          "patch": [":bug:", ":ambulance:", ":lock:", ":zap:"],
          "skip": [":memo:", ":white_check_mark:", ":construction:", ":recycle:"]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "publishCmd": "bash -lc 'set -euo pipefail; JAR=$(ls -1 target/*.jar | grep -v \"^target/original-\" | head -n 1); echo \"Using built jar: $JAR\"; cp \"$JAR\" \"target/windtrader-java-${nextRelease.version}.jar\"; cp \"$JAR\" \"target/windtrader-java.jar\"; ls -lh target/windtrader-java*.jar'"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "target/windtrader-java-*.jar",
            "label": "windtrader-java shaded jar (versioned + latest alias)"
          }
        ]
      }
    ]
  ]
}
